    block content
        .main.container
            .row
                .col-md-6.col-md-offset-3
                    h1 Sign Up
                    form(method='POST action='/signup')
                        .form-group
                            label(for='firstname') Name:
                            input#name.form-control(type='text', placeholder='last name' name='first-name')
                        .form-group
                            label(for='firstname') Name:
                            input#name.form-control(type='text', placeholder='first name' name='first-name')
                        .form-group
                            label(for='email') Email:
                            input#email.form-control(type='email', placeholder='email' name='email')
